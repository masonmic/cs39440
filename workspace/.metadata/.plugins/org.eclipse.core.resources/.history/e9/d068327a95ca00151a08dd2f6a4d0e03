	public static float calcAvg(ArrayList<Float> listPrice){
		
		float sum = 0;
		for (Float meanFloat :listPrice){
			
			sum += meanFloat;
		}
		return (listPrice.isEmpty()? 0: 1*sum/listPrice.size());
	}
	

	
}
