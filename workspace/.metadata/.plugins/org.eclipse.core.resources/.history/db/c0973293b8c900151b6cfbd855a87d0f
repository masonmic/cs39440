package stock_trader;

import java.util.Random;


public class Stock {
	
public float price;
public float fair;
public float high;
public float low;
public int rating;


public Stock(float getPrice, float getFair,float getHigh, float getLow,
		int getRating){

	price = getPrice;
	fair = getFair;
	high = getHigh;
	low = getLow;
	rating = getRating;
}

	
public void setPrice(){
	
	this.price = randFloat(0, 0);
			
}

public void setFair(){
	
	this.fair = randFloat(0, 0);
			
}

public void setHigh(){
	
	this.high = randFloat(0, 0);
			
}

public void setLow(){
	
	this.low = randFloat(0, 0);
			
}

public void setRating(){
	
	this.rating = randInt(0, 0);
			
}

public float getPrice(){
	
	return this.setPrice;
}

public float getFair(){
	
	return this.fair;
}

public float getHigh(){
	
	return this.high;
}

public float getLow(){
	
	return this.low;
}

public int getRating(){
	
	return this.rating;
}


public int randInt(int min, int max) {

    Random rand = new Random();
    int randomNumInt = rand.nextInt((max - min) + 1) + min;

    return randomNumInt;
}

public float randFloat(float min, float max){
	
	Random rand = new Random();
	float randomNumFloat = rand.nextFloat()*((max - min) + 1) + min;
	
	return randomNumFloat;
	
}
			
	





}

	
	

